@using Microsoft.AspNetCore.Identity
@inject SignInManager<Osoba> SignInManager
@inject UserManager<Osoba> UserManager


    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            var user = await UserManager.GetUserAsync(User);
            var ImePrezime = user.Ime + user.Prezime;
            var ImeKorisnika = user.Ime;

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Zdravo @ImeKorisnika!</a>
            </li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Odjavi se</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Prijavi se</a>
            </li>


        }

    </ul>
