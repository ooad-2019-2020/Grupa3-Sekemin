@model ZahtjevZaSmjestaj;

<link rel="stylesheet" href="~/css/dorm.css" />


<h2> Kreiranje zahtjeva za smještaj</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="CimerId" class="control-label"></label>
                <select asp-for="CimerId" class="form-control" asp-items="ViewBag.CimerId">Odaberi cimera</select>
            </div>
            <div class="form-group">
                <label asp-for="SobaId" class="control-label"></label>
                <select asp-for="SobaId" class="form-control" asp-items="ViewBag.SobaId">Odaberi sobu</select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





