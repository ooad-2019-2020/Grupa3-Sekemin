@model IEnumerable<Sekemin.Models.ZahtjevZaSmjestaj>

<link rel="stylesheet" href="~/css/zaduzivanje.css" />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soba.Sprat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soba.RedniBroj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cimer.Ime)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Cimer.Prezime)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soba.Sprat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soba.RedniBroj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cimer.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cimer.Prezime)
            </td>
            <td>
                <a asp-controller="RezervacijaSmjestaja" asp-action="Create">Odobri zahtjev</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


